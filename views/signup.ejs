<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Signup Form</title>
    <link rel="stylesheet" href="/css/background.css">
</head>
<body>
    <%- include("./partials/nav.ejs") %>
    <h2>Sign up here:</h2>
    <br>
    <%- include("./partials/errors.ejs") %>
    <br>
    <form action="/auth/signup" method="POST">
        <label for="first-name">First Name:</label>
        <input type="text" id="first-name" name="first_name" value="<%= typeof formData !== 'undefined' ? formData.firstName : '' %>"/>
        <label for="last-name">Last Name:</label>
        <input type="text" id="last-name" name="last_name" value="<%= typeof formData !== 'undefined' ? formData.lastName : ''%>"/>
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" value="<%= typeof formData !== 'undefined' ? formData.username : ''%>"/>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password"/>
        <label for="confirm-password">Confirm Password:</label>
        <input type="password" id="confirm-password" name="confirm_password"/>
        <button type="submit">Submit</button>
    </form>
    <%- include("./partials/footer.ejs") %>
</body>
</html>